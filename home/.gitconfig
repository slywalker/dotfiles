[core]
	excludesfile = ~/.gitignore
	pager = less -r
	editor = vim -c \"set fenc=utf-8\"
[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[merge]
	log = true
	tool = opendiff
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
[commit]
	cleanup = whitespace
[include]
	path = .gitconfig.user
